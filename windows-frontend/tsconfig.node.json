{
  "compilerOptions": {
    "composite": true,
    "noEmit": false,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./.tsbuild/node",

    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["vite.config.ts"]
}
